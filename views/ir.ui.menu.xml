<odoo>
    <record id="overtime_report_wizard_view" model="ir.ui.view">
        <field name="name">overtime.report.wizard.view</field>
        <field name="model">overtime.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group string="Datos generales">
                    <field name="payslip_run_ids" widget="many2many_tags"/>
                    <field name="company_id"/>
                </group>
                <footer>
                    <button name="generate_report" type="object" string="Generar Reporte" class="oe_highlight"/>
                    <button string="Cancelar" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_overtime_report_wizard" model="ir.actions.act_window">
        <field name="name">Reporte de horas extras (DGT-2)</field>
        <field name="res_model">overtime.report.wizard</field>
        <field name="type">ir.actions.act_windows</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="overtime_report_wizard_view"/>
        <field name="target">new</field>
    </record>

    <menuitem action="action_overtime_report_wizard" id="menu_overtime_report" parent="hr_payroll.menu_hr_payroll_report"/>

</odoo>
